  <body class="bg-info">
    <div class="container d-flex flex-column align-items-center">
      <h1 class="mt-3 text-center">Reja va Maqsadlar</h1>
      <div class="col-md-8 mt-5">
        <div class="card border-0">
          <div class="card-body">
            <form id="create-form" action="/create-item" method="POST">
              <div class="input-group mb-3">
                <input
                  id="create_field"
                  type="text"
                  name="reja"
                  class="form-control mr-3"
                  placeholder="Ma'lumotni kiriting"
                  aria-label="Recipientâ€™s username"
                  aria-describedby="button-addon2"
                />
                <button
                  class="btn btn-outline-success"
                  type="submit"
                  id="button-addon2"
                >
                  Yangi Reja Qo'shish
                </button>
              </div>
            </form>
          </div>
        </div>

        <ul id="item-list" class="list-group pb-5">
          <% items.map((item) => {%>
          <li
            class="list-group-item list-group-item-info d-flex justify-content-between align-items-center"
          >
            <span class="item-text"><%= item.reja %></span>
            <div>
              <button
                class="edit-me btn btn-secondary btn-sm mr-1"
                data-id="<%= item._id %>"
              >
                Ozgartirish
              </button>
              <button
                class="delete-me btn btn-danger btn-sm"
                data-id="<%= item._id %>"
              >
                Ochirish
              </button>
            </div>
          </li>
          <% }) %>
        </ul>
        <button
          id="clean-all"
          class="btn btn-danger"
          style="border-radius: 20px"
        >
          Barcha rejalarni ochirish
        </button>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/browser.js"></script>
  </body>
